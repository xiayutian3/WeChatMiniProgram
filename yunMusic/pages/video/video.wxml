<view class="videoContainer">
  <!-- 头部区域 -->
  <view class="header">
    <image class="" src="/static/images/video/video.jpg"></image>
    <view class="search">搜索音乐</view>
    <image class="" src="/static/images/logo.png"></image>
  </view>
  <!-- 导航区域 -->
  <scroll-view class="navScroll" scroll-x="{{true}}" enable-flex>
    <view class="navItem" wx:for="{{videoGroupList}}" wx:key="id" bindtap="changeNav" id="{{item.id}}" data-id="{{item.id}}">
      <view class="navContent {{navId == item.id?'active':''}}">{{item.name}}</view>
    </view>
  </scroll-view>
</view>